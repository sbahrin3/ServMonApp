
<div id="chartContainer" style="height: 300px; width: 100%;"></div>


<script>

_jq( document ).ready(function() {
    loadChart();
    
});

function loadChart() {

	var dataPoints = [];
	
	var chart = new CanvasJS.Chart("chartContainer", {
		theme: "light2",
		title: {
			text: "JVM Free Memory"
		},
		data: [{
			type: "line",
			dataPoints: dataPoints
		}]
	});
	
	// Initial Values
	var xValue = 0;
	var yValue = 10;
	var newDataCount = 200;
	
	updateData();
	

	
	function addData(data) {
		if(newDataCount != 1) {
			_jq.each(data, function(key, value) {
				dataPoints.push({x: value[0], y: parseInt(value[1])});
				xValue++;
				yValue = parseInt(value[1]);
			});
		} else {
			//dataPoints.shift();
			dataPoints.push({x: data[0][0], y: parseInt(data[0][1])});
			xValue++;
			yValue = parseInt(data[0][1]);
		}
		
		newDataCount = 1;
		chart.render();
		setTimeout(updateData, 1000);
	}
	
	function updateData() {
		_jq.getJSON("${serverUrl}/servmon/servlet/sb.servmon.module.GetData?length=" + newDataCount + "&xstart=" + xValue, addData);
		sendAjax3('getActiveConnections', 'activeConnections', '');
	}

}

</script>


